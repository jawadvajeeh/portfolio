---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from "../components/Hero.astro";
import Socials from "../components/Socials.astro";

const pageTitle = "Portfolio | Mohammed Abdul Jawad Vajeeh - Software Engineer";
const pageDescription = "Check out my projects, experience, and skills. I'm Mohammed Abdul Jawad Vajeeh, Software Engineer specializing in React, React Native and Typescript. I pick up new technologies fast and love turning complex challenges into elegant solutions that solve real business problems.";
const url = "https://jawadvajeeh.com";
const ogImage = `${url}/og_image.png`;
---

<Layout pageDescription={pageDescription} pageTitle={pageTitle} url={url} ogImage={ogImage}>
	<div class="max-w-6xl md:px-4 xl:max-w-7xl xl:px-0 mx-auto">
		<Navigation />
		<Hero />
		<Socials />
	</div>
</Layout>
